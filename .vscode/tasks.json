{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OpenGL Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/src/main.c",
                "${workspaceFolder}/src/glad.c",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "-lglfw3",
                "-lopengl32",
                "-lgdi32",
                "-o",
                "${workspaceFolder}/main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile OpenGL project with GLFW and GLAD"
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "${workspaceFolder}/main.exe",
            "dependsOn": ["Build OpenGL Project"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Build and run the OpenGL application"
        }
    ]
}
